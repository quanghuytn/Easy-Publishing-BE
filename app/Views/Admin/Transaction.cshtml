                });
                // $('#basic-datatables').DataTable().clear().rows.add(data.dt).draw();
            },
            error: () => {
                $('.loader-container').hide();
                console.error('Error fetching data:', error)
            },
        });
    }

    $('#transaction').click(function () {
        $('#request').removeClass('active');
        loadTransaction()
    });

    $('#request').click(function () {
        $('#transaction').removeClass('active');
        $('#request').addClass('active');
        loadRefund()
    });

    var loadRefund = () => {
        $('.loader-container').show();
        $.ajax({
            url: `http://localhost:5188/api/v1/tickets/refunds`,
            type: "GET",
            headers: {
                "Content-Type": "application/json",
            },
            success: (data) => {
                $('.loader-container').hide();
                $('#form').empty().append(`<p>
                        <button id="exportRefund" onClick="exportData()" class="btn btn-primary">Xuất ra Excel</button>
                        <button id="approveRefund" onClick="approve()" class="btn btn-success">Cập nhật toàn bộ</button>
                        </p>
                        `);

                if ($.fn.DataTable.isDataTable('#basic-datatables')) {
                    $('#basic-datatables').DataTable().destroy();
                }
                $('#basic-datatables').empty().append(`
                    <thead>
                        <tr>
                            <th>Mã yêu cầu</th>
                            <th>Người rút</th>
                            <th>Ngân hàng</th>
                            <th>Số ngân hàng</th>
                            <th>Số tiền</th>
                            <th>Thời gian gửi</th>
                            <th>Tình trạng</th>
                        </tr>
                    </thead>`);

                $('#basic-datatables').DataTable({
                    data: data.dt,
                    columns: [
                        { data: 'requestId' },
                        { data: 'userFullname' },
                        { data: 'bankId' },
                        { data: 'bankAccount' },
                        {
                            data: 'amount',
                            render: function (data) {
                                return data.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
                            }
                        },
                        { data: 'requestTime' },
                        {
                            data: null,
                            render(data) {
                                if (data.responseTime == null)
                                    return `Pending`
                                else return `In Progress`
                            }
                        },
                    ],
                    order: [[0, 'asc']],
                });
            },
            error: () => {
                $('.loader-container').hide();
                console.error('Error fetching data:', error)
            },
        });
    }

